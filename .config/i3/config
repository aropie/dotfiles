set $mod Mod4
set $term terminator
set $editor emacsclient -cna ''

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango: Knack Nerd Font 9

set $bg-color 	         #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

default_border pixel 3
# Required for gaps
gaps inner 10
gaps outer 10

focus_follows_mouse no

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Hide dege borders
hide_edge_borders both

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

bindsym $mod+q kill
bindsym $mod+Shift+q kill

# start rofi (a program launcher)
bindsym $mod+d exec --no-startup-id rofi -modi drun -show drun 

# lock screen
bindsym $mod+Shift+x exec --no-startup-id lock

# split in horizontal orientation
# bindsym $mod+h split h


# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+y		resize shrink width 10 px or 10ppt
bindsym $mod+Shift+u		resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+i		resize grow height 10 px or 10 ppt
bindsym $mod+Shift+o		resize grow width 10 px or 10 ppt

bindsym $mod+u			        focus parent

bindsym $mod+v split toggle

bindsym $mod+r				exec $term -e ranger

bindsym $mod+f 				fullscreen toggle

bindsym $mod+t 				layout toggle
bindsym $mod+Shift+t			gaps inner current set 10; gaps outer current set 10

bindsym $mod+Shift+space 		floating toggle
bindsym $mod+space 			focus mode_toggle

bindsym $mod+m 				exec $term -e ncmpcpp

bindsym $mod+Shift+Escape		exec rofi_power
bindsym $mod+Shift+r			restart

bindsym $mod+s				gaps inner current plus 5
bindsym $mod+Shift+s		     	gaps inner current minus 5

bindsym $mod+z				gaps outer current plus 5
bindsym $mod+Shift+z			gaps outer current minus 5

bindsym $mod+Shift+d			gaps inner current set 0; gaps outer current set 0

bindsym $mod+e				exec $EDITOR

bindsym $mod+Shift+a			exec --no-startup-id rofi_audioswap

bindsym $mod+Shift+p			exec --no-startup-id rofi_password


# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1:"
set $ws2 "2:"
set $ws3 "3:"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8:"
set $ws9 "9:"
set $ws10 "10:"

bindsym $mod+1		    workspace $ws1
bindsym $mod+2 		    workspace $ws2
bindsym $mod+3 		    workspace $ws3
bindsym $mod+4 		    workspace $ws4
bindsym $mod+5 		    workspace $ws5
bindsym $mod+6 		    workspace $ws6
bindsym $mod+7 		    workspace $ws7
bindsym $mod+8 		    workspace $ws8
bindsym $mod+9 		    workspace $ws9
bindsym $mod+0 		    workspace $ws10
bindsym $mod+Tab	    workspace back_and_forth

bindsym $mod+Shift+1 	    move container to workspace $ws1
bindsym $mod+Shift+2 	    move container to workspace $ws2
bindsym $mod+Shift+3 	    move container to workspace $ws3
bindsym $mod+Shift+4 	    move container to workspace $ws4
bindsym $mod+Shift+5 	    move container to workspace $ws5
bindsym $mod+Shift+6 	    move container to workspace $ws6
bindsym $mod+Shift+7 	    move container to workspace $ws7
bindsym $mod+Shift+8 	    move container to workspace $ws8
bindsym $mod+Shift+9 	    move container to workspace $ws9
bindsym $mod+Shift+0 	    move container to workspace $ws10

bindsym Print 		    exec --no-startup-id rofi_screenshot

# bind apps to workspaces
assign [class="qutebrowser"] $ws1
assign [class="transmission"] $ws8
assign [class="Rambox"] $ws9
assign [class="Steam"] $ws10

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec --no-startup-id sh $HOME/.config/rofi/scripts/power.sh
bindsym $mod+Shift+e exec i3-msg exit

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer --allow-boost -i 5 #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer --allow-boost -d 5 #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pamixer -t # mute sound

# Media player controls
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness


# START PROCESSES ON STARTUP 

# Launch Polybar where appropriate:
exec_always --no-startup-id run_polybar
# Capslock -> Ctrl
exec --no-startup-id setxkbmap -option 'ctrl:nocaps,shift:both_capslock'
# Start compton for transparency
exec --no-startup-id compton -f -D 1
# Dunst for notifications
exec --no-startup-id dunst
# Start Music Player Daemon
exec --no-startup-id mpd
# Hide cursor after a biref period
exec --no-startup-id unclutter
# xautolock for locking on idle
# exec --no-startup-id xautolock -time 10 -locker "~/.config/i3/scripts/lock.sh" -notify 30 -notifier "notify-send -u critical -t 10000 --icon='/usr/share/icons/gnome/48x48/actions/system-lock-screen.png' 'Screen Lock' 'Locking screen in 30 seconds'"
# Turn numlock on
exec --no-startup-id numlockx on
# Set random background
exec --no-startup-id feh --bg-scale ~/Pictures/Walls/50iME9x.jpg
# Start emacs daemonized
exec --no-startup-id emacs --daemon
